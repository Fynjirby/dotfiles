font pango:FiraCode Nerd Font SemiBold 11
set $mod Mod4

# Set default apps
set $terminal alacritty
set $browser firefox
set $launcher fuzzel
set $picker hyprpicker --autocopy --format=hex --verbose

# Binds
bindsym $mod+Return exec $terminal
bindsym $mod+b exec $browser
bindsym $mod+n exec joplin-desktop
bindsym $mod+m exec qmmp
bindsym $mod+p exec spotify
bindsym $mod+Shift_R exec blanknote
bindsym Pause exec hyprlock
bindsym $mod+Shift+q kill
bindsym $mod+d exec fuzzel
bindsym $mod+Shift+c exec $picker
bindsym Scroll_Lock exec grim - | wayland-boomer
bindsym Print exec grim -g "$(slurp)" -t png - | wl-copy --type image/png
bindsym $mod+Shift+r exec swaymsg reload
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+Space floating toggle 
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Shift+x exec ~/.local/bin/suspend.sh
bindsym $mod+Shift+z exec ~/.local/bin/shutdown.sh

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Mouse binds
bindsym --whole-window button8 exec playerctl play-pause --player=spotify
bindsym --whole-window button9 exec playerctl play-pause
bindsym --whole-window $mod+button6 workspace prev
bindsym --whole-window $mod+button7 workspace next

# Autostart some apps
# Hyprlock as greeter is done with greetd
exec hyprlock
exec --no-startup-id swaybg -i ~/Pictures/Wallpaper/mountains.jpg
exec mako
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec swayidle \
    timeout 120 'pidof hyprlock || hyprlock' \
    timeout 1200 'systemctl suspend' \
    before-sleep 'pidof hyprlock || hyprlock'

# Set some settings of sway
output HDMI-A-1 resolution 1920x1080@75Hz

input * {
    xkb_layout us,ru
    xkb_options grp:caps_toggle
    repeat_delay 300
    repeat_rate 25
}

floating_modifier $mod
default_border pixel 1
smart_borders on

# Default binds
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86Tools exec --no-startup-id $browser open.spotify.com

bar {
        swaybar_command waybar
        tray_output primary
}

# Window rules
for_window [title="wayland-boomer"] floating enable, fullscreen enable, sticky enable
for_window [title="Extension: (Bitwarden Password Manager) - Bitwarden â€” Mozilla Firefox"] floating enable
for_window [title="BlankNote"] floating enable
